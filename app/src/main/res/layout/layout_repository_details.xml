<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="Model"
            type="com.dev.eipeks.graymergetest.core.api.models.RepositoryModel"/>
    </data>
    <ScrollView
        style="@style/LayoutMatchWidth">
        <RelativeLayout
            style="@style/LayoutMatchParent"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/organization_avatar"
                app:placeholderImage="@drawable/github_icon"/>
            <LinearLayout
                style="@style/LayoutMatchWidth"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_below="@id/organization_avatar"
                android:id="@+id/repository_owner">
                <TextView
                    style="@style/LayoutWrapContent"
                    android:text="Repository Owner:"
                    android:layout_weight="1"
                    android:textSize="@dimen/large_text_size"
                    android:padding="@dimen/standard_padding"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/LayoutMatchWidth"
                    android:layout_weight="2"
                    tools:text="Square"
                    android:text="@{Model.owner.login.toUpperCase()}"
                    android:textSize="@dimen/large_text_size"
                    android:padding="@dimen/standard_padding"
                    android:gravity="start"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LayoutMatchWidth"
                android:orientation="vertical"
                android:layout_below="@id/repository_owner"
                android:id="@+id/repository_name_layout">
                <TextView
                    style="@style/LayoutWrapContent"
                    android:text="Repository Name:"
                    android:textSize="@dimen/large_text_size"
                    android:padding="@dimen/standard_padding"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/LayoutMatchWidth"
                    android:layout_weight="1"
                    tools:text="Retrofit"
                    android:text="@{Model.name}"
                    android:textSize="@dimen/large_text_size"
                    android:padding="@dimen/standard_padding"
                    android:gravity="start"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LayoutMatchWidth"
                android:orientation="vertical"
                android:layout_below="@id/repository_name_layout"
                android:id="@+id/description_layout">
                <TextView
                    style="@style/LayoutWrapContent"
                    android:text="Description:"
                    android:layout_weight="1"
                    android:textSize="@dimen/large_text_size"
                    android:padding="@dimen/standard_padding"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>
                <TextView
                    style="@style/LayoutMatchWidth"
                    android:layout_weight="1"
                    tools:text="Library description"
                    android:text="@{Model.description}"
                    android:textSize="@dimen/large_text_size"
                    android:padding="@dimen/standard_padding"
                    android:gravity="start"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/description_layout"
                android:id="@+id/separator_view"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                style="@style/LayoutWrapContent"
                android:orientation="horizontal"
                android:padding="@dimen/standard_padding"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/info_separator"
                android:layout_below="@id/separator_view"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="Star"
                    android:layout_margin="@dimen/standard_margin" />
                <TextView
                    style="@style/LayoutWrapContent"
                    tools:text="1,234"
                    android:text="@{Model.stars.toString()}"
                    android:textSize="@dimen/large_text_size"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:id="@+id/info_separator"
                android:layout_centerInParent="true"
                android:layout_below="@id/separator_view"/>
            <LinearLayout
                style="@style/LayoutWrapContent"
                android:orientation="horizontal"
                android:padding="@dimen/standard_padding"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/info_separator"
                android:layout_below="@id/separator_view"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/repo_forked"
                    android:contentDescription="Star"
                    android:layout_margin="@dimen/standard_margin" />
                <TextView
                    style="@style/LayoutWrapContent"
                    tools:text="1,234"
                    android:text="@{Model.forks.toString()}"
                    android:textSize="@dimen/large_text_size"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>